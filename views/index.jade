extends layout

block content
  div(ng-controller ='gameCtrl' )#mainContainer.fluid
    div(ng-show ='true')#dealerHand.row
      div(ng-repeat ="cards in dealerHand").col-sm-1.cards
        img(src ="/images/{{cards.imgName}}")
      div(ng-show='allHandsDone').col-sm-1.cards.total
        |Total:{{dealerScore}}
    div(ng-show ='true')#playerHand.row
      div(ng-repeat ="cards in playerHand" ).col-sm-1.cards
        img(src ="/images/{{cards.imgName}}")
      div.col-sm-1.cards
        |Total:{{playerScore}}
    div(ng-show ='split1Active')#split1Hand.row
      div(ng-repeat ="cards in split1Hand").col-sm-1.cards
        img(src ="/images/{{cards.imgName}}")
      div.col-sm-1.cards.total
        |Total:{{split1Score}}
    div(ng-show ='split2Active')#split2Hand.row
      div(ng-repeat ="cards in split2Hand").col-sm-1.cards
        img(src ="/images/{{cards.imgName}}")
      div.col-sm-1.cards.total
        |Total:{{split2Score}}
    div(ng-show ='split3Active')#split3Hand.row
      div(ng-repeat ="cards in split3Hand").col-sm-1.cards
        img(src ="/images/{{cards.imgName}}")
      div.col-sm-1.cards.total
        |Total:{{split3Score}}
    div
      |Bank: {{playersBank}}
      |Bet: {{playerBet}}
    div.gamePlayButtons
      button(id='doubleBtn' ng-click='doubleBtn()' ng-show ='showDoubleBtn') Double
      button(id='stayBtn' ng-click='stayBtn()' ng-show ='hideStayBtn') Stay
      button(id='hitBtn' ng-click='hitBtn()' ng-show ='hideHitBtn') Hit
      input(id='bet' type = 'number' min = 4 max = 24 step =4 placeholder='Bet' ng-model='playerBet' )
      button(id='dealBtn' ng-click='dealBtn()' ng-show ='true') Deal
    a(href='/rules') Rules
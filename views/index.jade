extends layout

block content
  div(ng-controller ='gameCtrl' )#mainContainer.fluid
    div(ng-show ='true')#dealerHand.row
      div(ng-repeat ="cards in dealerHand").col-sm-1.cards
        img(src ="/images/{{cards.imgName}}")
      div.col-sm-1.cards
        |{{dealerScore}}
    div(ng-show ='true')#playerHand.row
      div(ng-repeat ="cards in playerHand" ).col-sm-1.cards
        img(src ="/images/{{cards.imgName}}")
      div.col-sm-1.cards
        |{{playerScore}}
    div(ng-show ='false')#split1Hand.row
      div(ng-repeat ="cards in split1Hand").col-sm-1.cards
        img(src ="/images/{{cards.imgName}}")
      div.col-sm-1.cards
        |{{split1Score}}
    div(ng-show ='false')#split2Hand.row
      div(ng-repeat ="cards in split2Hand").col-sm-1.cards
        img(src ="/images/{{cards.imgName}}")
      div.col-sm-1.cards
        |{{split2Score}}
    div(ng-show ='false')#split3Hand.row
      div(ng-repeat ="cards in split3Hand").col-sm-1.cards
        img(src ="/images/{{cards.imgName}}")
      div.col-sm-1.cards
        |{{split3Score}}
    div.gamePlayButtons
      button(id='doubleBtn' ng-click='doubleBtn()' ng-show ='showDoubleBtn') Double
      button(id='splitBtn' ng-click='splitBtn()' ng-show ='showSplitBtn') Split
      button(id='stayBtn' ng-click='stayBtn()' ng-show ='true') Stay
      button(id='hitBtn' ng-click='hitBtn()' ng-show ='true') Hit
      input(id='bet' type = 'number' min = 5 max = 25 step = 5 placeholder='Bet')
      button(id='dealBtn' ng-click='dealBtn()' ng-show ='true') Deal
    a(href='/rules') Rules